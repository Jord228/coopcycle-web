{% set variant = product|sylius_resolve_variant %}

<span class="menu-item-inner">
  <span class="menu-item-content-wrapper">
    <span class="menu-item-content">
      {% include 'components/restaurant/product/menu_item_content.html.twig' %}
    </span>
    <span class="d-flex align-items-center">
      <span class="menu-item-price">
        {{ variant.price|price_format }}
      </span>
      {% if product.isReusablePackagingEnabled() %}
      <span class="label label-info ml-2">{{ 'restaurant.list.tags.zerowaste'|trans }}</span>
      {% endif %}
    </span>
  </span>
  <span class="menu-item-image-wrapper">
  {% if card_product_image is not empty %}
    <img src="{{ card_product_image }}">
  {% endif %}
  </span>
</span>
