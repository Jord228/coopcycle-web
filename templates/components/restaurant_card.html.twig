<div class="restaurant-item {% if not enabled %}restaurant-item--disabled{% endif %}">
  <a href="{{ url }}" data-restaurant-path>
    <div class="position-relative">
      <img class="restaurant-image" src="{{ image }}" alt="{{ name }}">
       {% if should_show_pre_order %}
        <figcaption>
          <div class="w-100 h-100 position-absolute bg-dark" style="opacity: 0.5;"></div>
          <div class="text-white font-weight-bold d-flex flex-column justify-content-center align-items-center w-100 h-100 position-absolute p-5">
            <i class="fa fa-clock-o"></i>
            <span>{{ 'restaurants.pre_order'|trans }}</span>
          </div>
        </figcaption>
      {% endif %}
    </div>
    <h4 class="restaurant-item__title">{{ name|u.truncate(48, '…', false) }}</h4>
  </a>
  <div>
    {% if cuisines|length > 0 %}
      <div class="restaurant-item__caption mb-3">
        {% for cuisine in cuisines %}
          <a href="{{ path('restaurants_by_cuisine', { cuisineName: cuisine }) }}">{{ cuisine|trans({}, 'cuisines') }}</a>
          {% if not loop.last %}
            <span class="mx-2">·</span>
          {% endif %}
        {% endfor %}
      </div>
    {% elseif description is not empty %}
      <div class="restaurant-item__caption mb-3">
        <span class="text-muted">{{ description|striptags|slice(0, 140) ~ '…'|raw|nl2br }}</span>
      </div>
    {% else %}
      <div class="restaurant-item__caption mb-3">
        <span class="text-muted">{{ address }}</span>
      </div>
    {% endif %}
    <div data-fulfillment="{{ fulfillment_timing_url }}">
      {# Managed with React #}
      <span class="restaurant-item__time-range">
        <i class="fa fa-clock-o"></i>
      </span>
    </div>
  </div>

  {% if not enabled and (is_granted('ROLE_ADMIN') or is_granted('ROLE_RESTAURANT')) %}
    <div class="restaurant-item__top-left">
      <span class="btn btn-sm btn-warning">
        <i class="fa fa-eye"></i>  {{ 'restaurants.visible_by_you_only'|trans }}
      </span>
    </div>
  {% elseif enabled and exclusive %}
    <div class="restaurant-item__top-left">
      <span class="btn btn-sm btn-warning">
        <i class="fa fa-star"></i>  {{ 'adminDashboard.restaurants.exclusive'|trans }}
      </span>
    </div>
  {% endif %}

  {% if supports_edenred %}
    <div class="restaurant-item__top-right">
      <span class="restaurant-supports-edenred"></span>
    </div>
  {% elseif vytal_enabled %}
    <div class="restaurant-item__top-right">
      <span class="restaurant-supports-vytal"></span>
    </div>
  {% endif %}

</div>
