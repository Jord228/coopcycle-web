{% if store is defined %}
  {% if layout == 'dashboard.html.twig' and is_granted('ROLE_STORE') %}
    <div class="d-flex align-items-center justify-content-between">
      <div>
        <h3 class="m-0 mb-2 font-weight-bold">{{ 'stores.deliveries'|trans }}</h3>
        <small class="text-muted">{{ 'now'|format_datetime('full', 'none') }}</small>
      </div>
      <div>
        {% include "store/_partials/buttons.html.twig" %}
      </div>
    </div>
    <form class="d-flex align-items-center justify-content-between pt-4">
        <input type="search" class="form-control mr-5" placeholder="Search by address, name or #id">
      <div class="d-inline-flex">
        <div id="daterange_widget" class="mr-5"></div>
        <input type="hidden" id="start_at">
        <input type="hidden" id="end_at">
        <button type="submit" class="btn btn-default">Search</button>
      </div>
    </form>
  {% else %}
    <div class="d-flex align-items-center justify-content-end">
      {% include "store/_partials/buttons.html.twig" %}
    </div>
  {% endif %}
{% endif %}
